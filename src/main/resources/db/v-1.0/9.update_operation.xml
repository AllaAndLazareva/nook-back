<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="update_table_operation" author="Lazareva">
        <addColumn tableName="operation">
            <column name="nook" type="VARCHAR(64)">
                <constraints foreignKeyName="operation_nook_nook_id"
                             references="nook(id)"/>
            </column>
        </addColumn>
        <addColumn tableName="operation">
            <column name="owner" type="VARCHAR(64)">
                <constraints foreignKeyName="operation_owner_owner_id"
                             references="owner(id)"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>